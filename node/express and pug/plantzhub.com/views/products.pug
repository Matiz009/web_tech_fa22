extends ./layouts/top.pug
block content
    h3 List of Products 
            a(href="/products/add", class="btn btn-success ") Add New Product
            a(href="/products/delete", class="btn btn-danger ") Delete Product
            a(href="/products/edit", class="btn btn-secondary ") Edit Product
    table.table
        thead
            tr
                th Id
                th Name
                th Price
                th Type
        tbody 
            each product in products
                tr
                    td=product.id
                    td=product.name
                    td=product.price
                    td=product.type